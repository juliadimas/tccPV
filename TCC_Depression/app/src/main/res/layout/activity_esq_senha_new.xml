<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8492A5"
    tools:context=".esqSenhaNew">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-144dp"
        tools:layout_editor_absoluteY="30dp">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="-30dp"
            app:srcCompat="@drawable/logoimg" />

        <TextView
            android:id="@+id/tvNewSenha"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="@string/nSenha"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="100px" />

        <EditText
            android:id="@+id/edSenha"
            android:layout_width="300dp"
            android:layout_height="66dp"
            android:ems="10"
            android:hint="@string/senha"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/edNewSenha"
            android:layout_width="300dp"
            android:layout_height="66dp"
            android:ems="10"
            android:hint="@string/cSenha"
            android:inputType="textPassword" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btvolta"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="#ffffff"
                android:text="@string/Voltar"
                android:textAlignment="center"
                android:textColor="#000000" />

            <Button
                android:id="@+id/btConfirmar"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="#2E3C59"
                android:text="@string/Confirmar" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>